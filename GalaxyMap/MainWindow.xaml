<Window x:Name="window" x:Class="GalaxyMap.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:GalaxyMap"
    mc:Ignorable="d"
    Title="MainWindow" Height="484" Width="783">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Canvas Panel.ZIndex="1" Grid.Column="0" x:Name="RootCanvas" Background="Gray">
            <Image x:Name="GalaxyImage" Canvas.Left="-500" Canvas.Top="-500" Source="Images/galactic_full.jpg" Stretch="UniformToFill"/>
        </Canvas>
        <Grid Panel.ZIndex="2" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="red">
        </Grid>
    </Grid>
</Window>
